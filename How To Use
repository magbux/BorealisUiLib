Borealis UI Lib Tutorial
-- Load The Library
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/magbux/BorealisUiLib/refs/heads/main/BorealisOfficialUiLib"))()

-- Create A Window (Put The Tab Name Behind The Section Name)
local Window = Library.new("My Window")

-- Create A Tab
local Tab = Window:MakeTab("Main")

-- Create A Section
local MainSection = Tab:AddSection()

Label
MainSection:AddLabel("This Is A Label")

Button
MainSection:AddButton({
    Name = "This Is A Button",
    Callback = function()
        print("Button Clicked")
    end
})

Toggle
MainSection:AddToggle({
    Name = "This Is A Toggle",
    Default = false,
    Callback = function(Value)
        print(Value)
    end
})

Slider
MainSection:AddSlider({
    Name = "This Is A Slider",
    Min = 0,
    Max = 100,
    Default = 10,
    Callback = function(Value)
        print(Value)
    end
})

Textbox
MainSection:AddTextbox({
    Name = "This Is A Textbox",
    Default = "",
    Placeholder = "Type Here...",
    ClearOnFocusLost = false,
    Callback = function(Text)
        print(Text)
    end
})

Dropdown
MainSection:AddDropdown({
    Name = "This Is A Dropdown",
    Default = "Option 1",
    Items = {"Option 1", "Option 2", "Option 3"},
    Callback = function(Value)
        print(Value)
    end
})

Color Picker
MainSection:AddColorPicker({
    Name = "This Is A Color Picker",
    Default = Color3.fromRGB(60, 180, 255),
    Callback = function(Value)
        print(Value)
    end
})

Keybind
MainSection:AddKeybind("This Is A Keybind", Enum.KeyCode.RightControl, function()
    Window:toggle()
end)
